{
    "editor.insertSpaces": true,
    "editor.fontFamily": "Cascadia Code PL, SF Mono, Inconsolata Nerd Font, Menlo, Monaco, 'Courier New', monospace",
    "editor.lineHeight": 20,
    "editor.renderWhitespace": "boundary",
    "editor.cursorStyle": "underline",
    "editor.minimap.enabled": false,
    "editor.fontLigatures": true,
    "editor.wordWrap": "on",
    "editor.suggestSelection": "first",
    "editor.scrollBeyondLastLine": false,
    "editor.cursorBlinking": "solid",
    "editor.tabCompletion": "on",
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 60000,
    "files.trimTrailingWhitespace": true,
    "breadcrumbs.enabled": true,
    "explorer.confirmDragAndDrop": false,

    // Icon
    "workbench.iconTheme": "material-icon-theme",

    // Jesus I am so nitpicking my vscode
    "window.zoomLevel": 0,

    // Telemetry Reporter
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,

    // Disable bing search
    "workbench.settings.enableNaturalLanguageSearch": false,

    // Disable Feedback
    "workbench.statusBar.feedback.visible": false,

    // Git Configuration
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "gitlens.codeLens.enabled": false,

    "explorer.confirmDelete": false,
    // "explorer.sortOrder": "filesFirst",

    "diffEditor.ignoreTrimWhitespace": false,

    // Terminal Configurations
    // "terminal.integrated.rendererType": "dom",
    // "terminal.integrated.fontSize": 13,
    // GPU Terminal
    "terminal.integrated.rendererType": "experimentalWebgl",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "files.associations": {
        "*.json": "jsonc"
    },

    // YAML Language Configuration
    "yaml.format.enable": true,
    "[yaml]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    // Helm Template
    "[helm-template]": {
        "editor.tabSize": 2,
    },

    // Web
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    // Terraform Language Configuration
    "[terraform]": {
        "editor.tabSize": 2,
    },

    // Markdown Language Configuration
    "[markdown]": {
        "editor.tabSize": 2,
        // Do not trim whitespaces on markdown file - there might be a breakline character
        "files.trimTrailingWhitespace": false,
    },

    // Javascript and Typescript
    "javascript.updateImportsOnFileMove.enabled": "always",
    "[javascript]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[typescript]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },


    // "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },

    // Python
    "python.jediEnabled": false,
    "python.pythonPath": "/usr/bin/python3",

    // Golang
    "go.formatTool": "goimports",
    "go.useLanguageServer": true,
    "[go]": {
        "editor.codeActionsOnSaveTimeout": 3000,
        "editor.snippetSuggestions": "none",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        }
    },
    // VSCode will complain about the "gopls" settings, but they will still work.
    "gopls": {
        "usePlaceholders": true, // add parameter placeholders when completing a function
        // Experimental settings
        "completeUnimported": true, // autocomplete unimported packages
        "deepCompletion": true,     // enable deep completion
    },
    "go.languageServerFlags": [
        "-rpc.trace", // for more detailed debug logging
        "serve",
        "--debug=localhost:6060", // to investigate memory usage, see profiles
    ],

    // Todo Plugin
    "todohighlight.isEnable": true,

    // For Terraform 0.12
    // "terraform.indexing": {
    //     "enabled": false,
    //     "liveIndexing": false,
    //     "delay": 500,
    //     "exclude": [
    //         ".terraform/**/*",
    //         "**/.terraform/**/*"
    //     ]
    // },
    // "terraform.languageServer": {
    //     "enabled": true,
    //     "args": []
    // },
}
